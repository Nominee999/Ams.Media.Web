@using System.Linq
@using Ams.Media.Web.Models
@inject Ams.Media.Web.Services.IMenuGate Gate
@{
    var title = ViewData["Title"] as string ?? "AMS Media";
    var uname = User?.Identity?.Name ?? "";

    // โหลดเมนูทุกกลุ่มโดยส่ง username เป็น string และกัน null
    var mItems = (await Gate.GetSubMenusAsync('M', uname))?.ToList() ?? new List<MenuItemVm>();
    var tItems = (await Gate.GetSubMenusAsync('T', uname))?.ToList() ?? new List<MenuItemVm>();
    var rItems = (await Gate.GetSubMenusAsync('R', uname))?.ToList() ?? new List<MenuItemVm>();
    var eItems = (await Gate.GetSubMenusAsync('E', uname))?.ToList() ?? new List<MenuItemVm>();
    var aItems = (await Gate.GetSubMenusAsync('A', uname))?.ToList() ?? new List<MenuItemVm>();
    var sItems = (await Gate.GetSubMenusAsync('S', uname))?.ToList() ?? new List<MenuItemVm>();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <!-- Bootstrap Icons (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">AMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @* Master (M) *@
                        @if (mItems.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Master</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in mItems)
                                    {
                                        <li>
                                            @if (!string.IsNullOrWhiteSpace(it.Controller) && !string.IsNullOrWhiteSpace(it.Action))
                                            {
                                                <a class="dropdown-item" asp-controller="@it.Controller" asp-action="@it.Action">
                                                    @if (!string.IsNullOrWhiteSpace(it.Icon))
                                                    {
                                                        <i class="@it.Icon"></i>
                                                    }
                                                    @it.Text
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item" href="@it.Url">
                                                    @if (!string.IsNullOrWhiteSpace(it.Icon))
                                                    {
                                                        <i class="@it.Icon"></i>
                                                    }
                                                    @it.Text
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        @* Transaction (T) *@
                        @if (tItems.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Transaction</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in tItems)
                                    {
                                        <li>
                                            @if (!string.IsNullOrWhiteSpace(it.Controller) && !string.IsNullOrWhiteSpace(it.Action))
                                            {
                                                <a class="dropdown-item" asp-controller="@it.Controller" asp-action="@it.Action">@it.Text</a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item" href="@it.Url">@it.Text</a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        @* Report (R) *@
                        @if (rItems.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Report</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in rItems)
                                    {
                                        <li>
                                            @if (!string.IsNullOrWhiteSpace(it.Controller) && !string.IsNullOrWhiteSpace(it.Action))
                                            {
                                                <a class="dropdown-item" asp-controller="@it.Controller" asp-action="@it.Action">@it.Text</a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item" href="@it.Url">@it.Text</a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        @* Enquiry (E) *@
                        @if (eItems.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Enquiry</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in eItems)
                                    {
                                        <li>
                                            @if (!string.IsNullOrWhiteSpace(it.Controller) && !string.IsNullOrWhiteSpace(it.Action))
                                            {
                                                <a class="dropdown-item" asp-controller="@it.Controller" asp-action="@it.Action">@it.Text</a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item" href="@it.Url">@it.Text</a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        @* Admin (A) *@
                        @if (aItems.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Admin</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in aItems)
                                    {
                                        <li>
                                            @if (!string.IsNullOrWhiteSpace(it.Controller) && !string.IsNullOrWhiteSpace(it.Action))
                                            {
                                                <a class="dropdown-item" asp-controller="@it.Controller" asp-action="@it.Action">@it.Text</a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item" href="@it.Url">@it.Text</a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        @* System (S) *@
                        @if (sItems.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">System</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in sItems)
                                    {
                                        <li>
                                            @if (!string.IsNullOrWhiteSpace(it.Controller) && !string.IsNullOrWhiteSpace(it.Action))
                                            {
                                                <a class="dropdown-item" asp-controller="@it.Controller" asp-action="@it.Action">@it.Text</a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item" href="@it.Url">@it.Text</a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>

                    <form asp-controller="Account" asp-action="LogoutPost" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-3">
        @RenderBody()
    </main>

    <footer class="border-top py-3 mt-4">
        <div class="container small text-muted">
            © @DateTime.Now.Year AMS Media
        </div>
    </footer>

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
