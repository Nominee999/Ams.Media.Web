@using Ams.Media.Web.Models
@using Ams.Media.Web.Services
@inject IMenuGate Gate
@{
    var title = ViewData["Title"] as string ?? "AMS Media";
    var user = User;

    var mMenus = await Gate.GetSubMenusAsync('M', user);
    var tMenus = await Gate.GetSubMenusAsync('T', user);
    var rMenus = await Gate.GetSubMenusAsync('R', user);
    var eMenus = await Gate.GetSubMenusAsync('E', user);
    var aMenus = await Gate.GetSubMenusAsync('A', user);
    var sMenus = await Gate.GetSubMenusAsync('S', user);

    string LinkFor(MenuItemVm it)
    {
        if (!string.IsNullOrWhiteSpace(it?.Controller) && !string.IsNullOrWhiteSpace(it?.Action))
            return Url.Action(it.Action, it.Controller) ?? "#";
        if (!string.IsNullOrWhiteSpace(it?.Url)) return it!.Url!;
        return "#";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <!-- ✅ Bootstrap (LibMan default path) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <img src="~/img/ams_logo.png" alt="AMS" width="22" />
                    <span>AMS Media</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (mMenus?.Any(x => x.Enabled) == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Masterfiles</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in mMenus.Where(x => x.Enabled))
                                    {
                                        <li><a class="dropdown-item" href="@LinkFor(it)">@it.Name</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (tMenus?.Any(x => x.Enabled) == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Transactions</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in tMenus.Where(x => x.Enabled))
                                    {
                                        <li><a class="dropdown-item" href="@LinkFor(it)">@it.Name</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (rMenus?.Any(x => x.Enabled) == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Reports</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in rMenus.Where(x => x.Enabled))
                                    {
                                        <li><a class="dropdown-item" href="@LinkFor(it)">@it.Name</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (eMenus?.Any(x => x.Enabled) == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Enquirys</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in eMenus.Where(x => x.Enabled))
                                    {
                                        <li><a class="dropdown-item" href="@LinkFor(it)">@it.Name</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (aMenus?.Any(x => x.Enabled) == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Addins</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in aMenus.Where(x => x.Enabled))
                                    {
                                        <li><a class="dropdown-item" href="@LinkFor(it)">@it.Name</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (sMenus?.Any(x => x.Enabled) == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Systems</a>
                                <ul class="dropdown-menu">
                                    @foreach (var it in sMenus.Where(x => x.Enabled))
                                    {
                                        <li><a class="dropdown-item" href="@LinkFor(it)">@it.Name</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>

                    <div class="d-flex">
                        <a class="btn btn-outline-secondary btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>
    <!-- Bootstrap 5 (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <!-- ต้องใช้ bootstrap.bundle มี Popper ในตัว เพื่อให้ dropdown ทำงาน -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

</body>
</html>
