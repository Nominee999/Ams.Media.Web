@using Ams.Media.Web.Controllers
@model ClientEditVm

@{
    ViewData["Title"] = "Edit Client";
}

<h2 class="mb-3">Edit Client</h2>

<form asp-action="Edit" asp-route-id="@Model.ClientId" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="ClientId" class="form-label"></label>
        <input asp-for="ClientId" class="form-control" readonly />
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ClientName" class="form-label"></label>
        <input asp-for="ClientName" class="form-control" />
        <span asp-validation-for="ClientName" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="CreditTerm" class="form-label"></label>
            <input asp-for="CreditTerm" class="form-control" />
            <span asp-validation-for="CreditTerm" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="AgencyCom" class="form-label"></label>
            <input asp-for="AgencyCom" class="form-control" />
            <span asp-validation-for="AgencyCom" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3 form-check" style="padding-top: 32px;">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="ClientPrefix" class="form-label"></label>
            <input asp-for="ClientPrefix" class="form-control" />
            <span asp-validation-for="ClientPrefix" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="ClientBranch" class="form-label"></label>
            <input asp-for="ClientBranch" class="form-control" />
            <span asp-validation-for="ClientBranch" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="ClientTaxNo" class="form-label"></label>
            <input asp-for="ClientTaxNo" class="form-control" />
            <span asp-validation-for="ClientTaxNo" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="BranchType" class="form-label"></label>
            <input asp-for="BranchType" class="form-control" />
            <span asp-validation-for="BranchType" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Detail" asp-route-id="@Model.ClientId" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
