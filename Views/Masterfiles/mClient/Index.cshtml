@using Ams.Media.Web.Controllers
@model IEnumerable<ClientListVm>

@{
    ViewData["Title"] = "Clients";
}

<h2 class="mb-3">Clients</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="q" value="@(Context.Request.Query["q"])" class="form-control" placeholder="Search by ID or Name" />
        <button class="btn btn-primary" type="submit">Search</button>
        <a asp-action="Create" class="btn btn-success ms-2">Create</a>
    </div>
</form>

<table class="table table-bordered table-striped align-middle">
    <thead>
        <tr>
            <th style="width: 120px;">Client ID</th>
            <th>Client Name</th>
            <th style="width: 120px;">Active</th>
            <th style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClientId</td>
                    <td>@item.ClientName</td>
                    <td>@(item.IsActive ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.ClientId" class="btn btn-sm btn-outline-secondary">Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-sm btn-primary ms-1">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.ClientId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger ms-1"
                                    onclick="return confirm('Delete client @item.ClientId ?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center text-muted">No data</td></tr>
        }
    </tbody>
</table>
